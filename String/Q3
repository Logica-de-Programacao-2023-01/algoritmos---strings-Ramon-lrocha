package main

import (
	"fmt"
	"strings"
)

func main() {
	var texto, caractereAntigo, caractereNovo string
	fmt.Print("Digite uma string: ")
	fmt.Scanln(&texto)
	fmt.Print("Digite o caractere a ser substitu√≠do: ")
	fmt.Scanln(&caractereAntigo)
	fmt.Print("Digite o novo caractere: ")
	fmt.Scanln(&caractereNovo)

	resultado := strings.ReplaceAll(texto, caractereAntigo, caractereNovo)
	fmt.Println("Resultado:", resultado)
}
