package main

import (
	"fmt"
	"strings"
)

func main() {
	var texto, letraAntiga, letraNova string
	fmt.Print("Digite uma string: ")
	fmt.Scanln(&texto)
	fmt.Print("Digite a letra a ser substitu√≠da: ")
	fmt.Scanln(&letraAntiga)
	fmt.Print("Digite a nova letra: ")
	fmt.Scanln(&letraNova)

	resultado := strings.ReplaceAll(texto, letraAntiga, letraNova)
	fmt.Println("Resultado:", resultado)
}
